{
  "version": 2,
  "name": "development-website",
  "framework": null,
  "functions": {
    "**": {
      "runtime": "nodejs22.x"
    }
  },
  "installCommand": "cd tetris && npm install && cd ../collaborative-canvas && npm install && cd ../daily-tracking && npm install",
  "buildCommand": "cd tetris && npm run build && mkdir -p ../public/tetris && cp -r dist/* ../public/tetris/ && cd ../collaborative-canvas && npm run build && mkdir -p ../public/ink-pen && cp -r dist/* ../public/ink-pen/ && cd ../daily-tracking && npm run build && mkdir -p ../public/daily-tracking && cp -r out/* ../public/daily-tracking/",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/daily-tracking/?$",
      "dest": "/daily-tracking/index.html"
    },
    {
      "src": "/daily-tracking/(.*)",
      "dest": "/daily-tracking/$1"
    },
    {
      "src": "/tetris/?$",
      "dest": "/tetris/index.html"
    },
    {
      "src": "/ink-pen/?$",
      "dest": "/ink-pen/index.html"
    },
    {
      "src": "/collaborative-canvas/?$",
      "dest": "/ink-pen/index.html"
    },
    {
      "src": "/collaborative-canvas/assets/(.+)",
      "dest": "/collaborative-canvas/assets/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Pragma": "no-cache", 
        "Expires": "0"
      }
    },
    {
      "src": "/tetris/assets/(.+)",
      "dest": "/tetris/assets/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
