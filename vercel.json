{
  "version": 2,
  "name": "development-website",
  "framework": null,
  "functions": {
    "**": {
      "runtime": "nodejs22.x"
    }
  },
  "installCommand": "echo 'Dependencies installed by build script'",
  "buildCommand": "./build.sh",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/daily-tracking/?$",
      "dest": "/daily-tracking/index.html"
    },
    {
      "src": "/daily-tracking/(.*)",
      "dest": "/daily-tracking/$1"
    },
    {
      "src": "/tetris/?$",
      "dest": "/tetris/index.html"
    },
    {
      "src": "/ink-pen/?$",
      "dest": "/ink-pen/index.html"
    },
    {
      "src": "/collaborative-canvas/?$",
      "dest": "/ink-pen/index.html"
    },
    {
      "src": "/collaborative-canvas/assets/(.+)",
      "dest": "/collaborative-canvas/assets/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Pragma": "no-cache", 
        "Expires": "0"
      }
    },
    {
      "src": "/tetris/assets/(.+)",
      "dest": "/tetris/assets/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
